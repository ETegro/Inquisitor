#!/bin/sh

. global
. $SHARE_DIR/functions
. $SHARE_DIR/communication

COMPUTER_ID=
echo -n 'Trying to get ID by MACs...'
COMPUTER_ID=`get_id_by_macs \`get-macs\``
if [ -n "$COMPUTER_ID" ]; then
	echo_success
else
	echo_failure
	echo -n "Enter serial number manually: "
	read COMPUTER_ID
	if [ -n "$COMPUTER_ID" ]; then
		echo_success
	else
		echo_failure
		exit 1
	fi	
fi
	
export COMPUTER_ID

# Starting monitorings
for I in $SHARE_DIR/monitoring/*; do
	echo -n "Starting `basename $I`"
	monitoring_start $I
done
