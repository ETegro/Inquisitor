. _inq-config-global; . $SHARE_DIR/functions-test

exit_handler()
{
	[ -f "$config" ] && rm -f $config
}

config=`mktemp`
cat > $config <<EOF
REMOTE_HOST=$SSH_HOST
REMOTE_USER=$SSH_USER
REMOTE_KEY_PUB="$KEYPUB"
REMOTE_KEY_PRIV="$KEUPRV"
SSH=ssh
SCP=scp
ISCSIADM="sudo iscsiadm"
DD="sudo dd"
FIO="sudo fio"
EOF

pushdq $SHARE_DIR/remotetesting
CONFIG=$config ./perform.sh $REMOTETEST
popd

test_succeeded
