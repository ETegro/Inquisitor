#!/bin/sh -ef
# NAME=Dhrystone
# DESCRIPTION=Dhrystone is a synthetic computing benchmark intended to be representative of system integer processing performance. Written on C language version of this benchmark is used. It runs affinited to each CPU specified duration time, giving number of processed loops as a performance result.
# DESTROYS_HDD=false
# POWEROFF_DURING_TEST=false
# VERSION=0.1
# TAGS=benchmark,cpu
# DEPENDS=CPU
# VAR=DURATION:int:30:Benchmark duration (sec)

. /usr/share/inquisitor/functions-test

exit_handler()
{
	[ -f "$RESULT_FILE" ] && rm -f $RESULT_FILE
}

CPU_QUANTITY=`grep processor /proc/cpuinfo | wc -l`

for i in `seq 0 $(($CPU_QUANTITY - 1))`; do
	echo -n "Dhrystone on core $i"
	result=`taskset -c $i dhrystone $DURATION 2>&1 | awk '{print $1}'`
	echo_success
	benchmark_submit_float "Core $i loops" "$result"
done

test_succeeded
