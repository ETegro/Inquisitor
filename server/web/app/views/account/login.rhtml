<center>
<% form_tag do -%>
<table id="login_form">
<tr>
<td><label for="login">Login:</label></td>
<td><%= text_field_tag 'login' %></td>
</tr>

<tr>
<td><label for="password">Password:</label></td>
<td><%= password_field_tag 'password' %></td>
</tr>

<tr>
<td><label for="remember_me">Remember me:</label></td>
<td><%= check_box_tag 'remember_me' %></td>
</tr>

<tr>
<td colspan="2" style="text-align: center"><%= submit_tag 'Login' %></td>
</tr>
</table>
<% end -%>
</center>
