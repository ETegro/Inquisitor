#!/bin/sh -ef
# NAME=CPU
# DESCRIPTION=CPU burn-in testing
# DESTROYS_HDD=N
# IS_INTERACTIVE=N
# POWEROFF_DURING_TEST=N
# VAR=CPU_TEST_TIME:int:300:Total time of CPU testing
# VAR=CPU_LOG_TIME:int:30:Time between progress updates

. /usr/share/inquisitor/functions-test

detect_burn_program()
{
	CPU_VENDOR=`cat /proc/cpuinfo | grep vendor_id | awk '{print $3}' | sed '2,$d'`

	case $CPU_VENDOR in
	AuthenticAMD)
		BURN_PROGRAM="burnK7"
		;;
	*)
		BURN_PROGRAM="burnP6"
		;;
	esac
}

detect_cpu_quantity()
{
	CPU_QUANTITY=`cat /proc/cpuinfo | grep processor | wc -l`
}

start_burn()
{
	for i in `seq 1 $CPU_QUANTITY`;
	do
		$BURN_PROGRAM &
		echo $! >~/cpuburn$i.pid
	done
}

stop_burn()
{
	for i in `seq 1 $CPU_QUANTITY`;
	do
		killbypid cpuburn$i
	done
}

check_alive_burners()
{
	for i in `seq 1 $CPU_QUANTITY`;
	do
		(( `ps \`cat ~/cpuburn$i.pid\` | wc -l` == 2 )) || test_failed
	done
}

detect_burn_program
detect_cpu_quantity
start_burn
test_started $CPU_TEST_TIME

START=`date "+%s"`
while true; do
	sleep $CPU_LOG_TIME
	TIME=`date "+%s"`
	check_alive_burners
	if (( TIME - START > CPU_TEST_TIME )); then
		stop_burn
		test_succeeded
		break
	else
		test_progress $[$TIME - $START] $CPU_TEST_TIME
	fi
done
