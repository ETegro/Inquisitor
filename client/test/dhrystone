#!/bin/sh -ef
# NAME=Dhrystone
# DESCRIPTION=Dhrystone integer calculations benchmark
# DESTROYS_HDD=false
# POWEROFF_DURING_TEST=false
# VERSION=0.1
# TAGS=benchmark,cpu
# VAR=DURATION:int:30:Benchmark duration (sec)

. /usr/share/inquisitor/functions-test

RESULT_FILE=`mktemp`

print_red_message '!!! THIS IS DEVELOPMENT TEST !!!'

# Cleanup
exit_handler()
{
	local rc=$?
	trap - EXIT

	if [ -f "$RESULT_FILE" ]; then
		rm -f $RESULT_FILE
	fi

	exit $rc
}
trap exit_handler HUP PIPE INT QUIT TERM EXIT

CPU_QUANTITY=`grep processor /proc/cpuinfo | wc -l`

for i in `seq 0 $(($CPU_QUANTITY - 1))`; do
	echo -n "Dhrystone on core $i"
	taskset -c $i dhrystone $DURATION > $RESULT_FILE
	echo_success
	benchmark_submit_float "Core $i loops" `awk '{print $1}' < $RESULT_FILE`
done
